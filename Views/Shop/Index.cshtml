@model List<FlowerShop.Controllers.ProductViewModel>

@{
    ViewData["Title"] = "Product Catalog";
}

<style>
    .catalog-page .lux-main {
        max-width: 100%;
        padding-left: 0;
        padding-right: 0;
    }

    .catalog-page .lux-card {
        background: transparent;
        padding: 0;
        box-shadow: none;
    }

    .catalog-header {
        padding: 2rem 4vw 1rem;
    }

    .product-grid-container {
        padding: 0 4vw 3rem;
    }

    .product-card {
        border: none;
        border-radius: 24px;
        overflow: hidden;
        box-shadow: 0 25px 45px rgba(74, 47, 53, 0.12);
        height: 100%;
        display: flex;
        flex-direction: column;
        background: #fff;
    }

        .product-card img {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .product-card .card-body {
            padding: 1.25rem;
            flex-grow: 1;
        }

        .product-card .card-title {
            font-family: 'Playfair Display', serif;
            font-size: 1.2rem;
            color: #4a2f35;
        }

        .product-card .price-tag {
            font-weight: 600;
            color: #f2a0ac;
            font-size: 1.1rem;
        }
</style>

<div class="catalog-page">
    <div class="catalog-header">
        <div>
            <p class="text-uppercase text-muted mb-1">Curated Collection</p>
            <h1 class="display-6 fw-semibold mb-0">Product Catalog</h1>
        </div>
    </div>

    <section class="product-grid-container">
        @if (Model != null && Model.Any())
        {
            <div class="row g-4">
                @foreach (var product in Model)
                {
                    <div class="col-6 col-sm-4 col-lg-3">
                        <div class="card product-card">
                            <img src="@product.ImageUrl" alt="@product.Name" />
                            <div class="card-body d-flex flex-column justify-content-between">
                                <div>
                                    <h2 class="card-title h5">@product.Name</h2>
                                </div>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <span class="price-tag">$@product.Price</span>
                                    <button type="button" class="btn btn-sm btn-outline-secondary text-uppercase add-to-cart-btn" data-product-id="@product.ProductId">Add</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <p class="text-muted">No products available at this time.</p>
            </div>
        }
    </section>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Handle Add to Cart button clicks
            $('.add-to-cart-btn').on('click', function () {
                var productId = $(this).data('product-id');
                var button = $(this);

                $.ajax({
                    url: '@Url.Action("AddToCart", "Shop")',
                    type: 'POST',
                    data: { productId: productId },
                    success: function (response) {
                        if (response.success) {
                            // Update cart badge
                            $('.badge').text(response.totalItems);

                            // Show success message
                            button.text('Added!').css('background-color', '#28a745').css('color', 'white');
                            setTimeout(function () {
                                button.text('Add').css('background-color', '').css('color', '');
                            }, 2000);
                        }
                    },
                    error: function () {
                        alert('Please log in to add items to cart.');
                    }
                });
            });
        });
    </script>
}

