<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FlowerShop</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;600&family=Work+Sans:wght@300;400;500&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/FlowerShop.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        :root {
            --petal-blush: #f9e5ec;
            --petal-rose: #f3cfe0;
            --sage-green: #b3d2c8;
            --deep-sage: #3d5c53;
            --text-main: #2f2a2b;
            --accent-pink: rgb(250, 110, 130); /* 250, 110, 130 */
        }

        body {
            font-family: 'Work Sans', Arial, sans-serif;
            background: linear-gradient(180deg, var(--petal-blush) 0%, #ffffff 35%, #fef7fa 100%);
            color: var(--text-main);
            min-height: 100vh;
        }

        /* Global Lux Design */
        .lux-header {
            background: #ffffff;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
            padding: 0.75rem 0;
        }

        .lux-brand {
            font-family: 'Playfair Display', serif;
            font-size: 1.75rem;
            color: var(--deep-sage);
            text-transform: capitalize;
            letter-spacing: 0.05rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

            /* --- NEW: Style for the Image Logo --- */
            .lux-brand img {
                height: 35px; /* Set height to match the desired size */
                width: auto;
                margin-right: 0.5rem;
                object-fit: contain; /* Ensures the image scales correctly */
            }

            /* --- REMOVE OLD ICON STYLING (since we use img now) --- */
            .lux-brand .icon {
                display: none; /* Hide the old P span */
            }
        /* --- End NEW/REMOVE --- */


        .lux-nav a {
            color: var(--text-main);
            font-weight: 500;
            text-transform: uppercase;
            letter-spacing: 0.05rem;
            padding: 0.5rem 1rem;
            border-radius: 999px;
            transition: all 0.2s ease;
            text-decoration: none !important;
            white-space: nowrap;
        }

            .lux-nav a:hover,
            .lux-nav a:focus {
                background-color: rgba(var(--accent-pink), 0.1);
                color: var(--deep-sage);
            }

        /* Utility Icons */
        .lux-utility-icons a {
            color: var(--deep-sage);
            font-size: 1.2rem;
            margin-left: 1.25rem;
            text-decoration: none;
            position: relative;
        }

            .lux-utility-icons a .badge {
                position: absolute;
                top: -5px;
                right: -10px;
                background-color: var(--accent-pink);
                color: white;
                font-size: 0.7rem;
                border-radius: 50%;
                padding: 0.2em 0.5em;
                line-height: 1;
            }

        /* Sign In Button */
        .btn-sign-in {
            background-color: var(--accent-pink);
            color: white;
            border-radius: 999px;
            padding: 0.6rem 1.5rem;
            font-weight: 600;
            margin-left: 1.5rem;
            text-decoration: none !important;
            transition: background-color 0.2s ease;
            border: 1px solid var(--accent-pink);
        }

            .btn-sign-in:hover {
                /* Using a simple dark color since darken() isn't standard CSS */
                background-color: rgb(220, 90, 110);
                color: white;
            }

        .lux-main {
            padding: 2.5rem 0;
        }

        .lux-card {
            background: rgba(255, 255, 255, 0.92);
            border-radius: 24px;
            padding: 2rem;
            box-shadow: 0 25px 50px rgba(61, 92, 83, 0.12);
        }

        footer.lux-footer {
            background: linear-gradient(90deg, var(--petal-rose), var(--sage-green));
            color: #fff;
            padding: 1.5rem 0;
            margin-top: 3rem;
            font-size: 0.95rem;
        }

            footer.lux-footer a {
                color: #fff;
                text-decoration: underline;
            }

        /* Dark Mode Styles */
        body.dark-mode {
            background: linear-gradient(180deg, #1a1a1a 0%, #2d2d2d 35%, #1f1f1f 100%);
            color: #e0e0e0;
        }

            body.dark-mode .lux-header {
                background: #2d2d2d;
                box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
            }

            body.dark-mode .lux-brand {
                color: #b3d2c8;
            }

            body.dark-mode .lux-nav a {
                color: #e0e0e0;
            }

                body.dark-mode .lux-nav a:hover,
                body.dark-mode .lux-nav a:focus {
                    background-color: rgba(250, 110, 130, 0.2);
                    color: #b3d2c8;
                }

            body.dark-mode .lux-utility-icons a {
                color: #b3d2c8;
            }

            body.dark-mode .lux-card {
                background: rgba(45, 45, 45, 0.95);
                color: #e0e0e0;
                box-shadow: 0 25px 50px rgba(0, 0, 0, 0.5);
            }

            body.dark-mode .card {
                background: rgba(45, 45, 45, 0.95);
                color: #e0e0e0;
                border-color: #444;
            }

            body.dark-mode .card-header {
                background: rgba(61, 92, 83, 0.3);
                border-bottom-color: #444;
                color: #e0e0e0;
            }

            body.dark-mode .form-label {
                color: #e0e0e0;
            }

            body.dark-mode .form-select,
            body.dark-mode .form-control {
                background-color: #3a3a3a;
                border-color: #555;
                color: #e0e0e0;
            }

                body.dark-mode .form-select:focus,
                body.dark-mode .form-control:focus {
                    background-color: #3a3a3a;
                    border-color: #b3d2c8;
                    color: #e0e0e0;
                }

            body.dark-mode .form-check-label {
                color: #e0e0e0;
            }

            body.dark-mode footer.lux-footer {
                background: linear-gradient(90deg, #2d2d2d, #3d5c53);
                color: #e0e0e0;
            }

                body.dark-mode footer.lux-footer a {
                    color: #b3d2c8;
                }

            body.dark-mode .btn-primary {
                background-color: var(--accent-pink);
                border-color: var(--accent-pink);
                color: white;
            }

                body.dark-mode .btn-primary:hover {
                    background-color: rgb(220, 90, 110);
                    border-color: rgb(220, 90, 110);
                    color: white;
                }
    </style>
</head>
<body>
    <header class="lux-header">
        <div class="container d-flex align-items-center justify-content-between">

            <a class="lux-brand text-decoration-none" asp-area="" asp-controller="Home" asp-action="Index">
                <img src="/Dalia Icons.png" />
                FlowerShop
            </a>

            <nav class="d-none d-lg-block">
                <ul class="lux-nav list-unstyled d-flex gap-4 mb-0 justify-content-center">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index">HOME</a></li>
                    <li><a asp-area="" asp-controller="Shop" asp-action="Index">CATALOG</a></li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li><a asp-area="" asp-controller="Order" asp-action="History">ORDERS</a></li>
                    }
                    <li><a asp-area="" asp-controller="Feedback" asp-action="Index">FEEDBACK</a></li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li><a asp-area="" asp-controller="Admin" asp-action="Index">ADMIN</a></li>
                    }
                </ul>
            </nav>

            <div class="d-flex align-items-center">
                <div class="lux-utility-icons">
                    <a href="#" aria-label="Search"><i class="fas fa-search"></i></a>
                    <a href="/Cart" aria-label="Cart"><i class="fas fa-shopping-bag"></i><span class="badge">0</span></a>
                </div>
                @if (User.Identity?.IsAuthenticated == true)
                {
                    <a asp-controller="Account" asp-action="Profile" class="lux-utility-icons" style="margin-left: 1.5rem;" aria-label="Profile">
                        <i class="fas fa-user-circle" style="font-size: 1.5rem; color: var(--accent-pink); cursor: pointer;"></i>
                    </a>
                }
                else
                {
                    <a class="btn-sign-in" asp-area="" asp-controller="Account" asp-action="Login">
                        <i class="fas fa-user"></i> Sign In
                    </a>
                }
            </div>

        </div>
    </header>
    <div class="container lux-main">
        <div class="lux-card">
            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="lux-footer">
        <div class="container d-flex flex-column flex-md-row justify-content-between align-items-center">
            <span>&copy; 2025 - FlowerShop</span>
            <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        // Update cart badge on page load
        function updateCartBadge() {
            $.get('@Url.Action("GetCartCount", "Cart")', function (count) {
                $('.badge').text(count);
            });
        }

        // Update badge when page loads
        $(document).ready(function () {
            updateCartBadge();
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>