@{
    // CRITICAL: Tells the page to use the minimal layout without header/footer
    Layout = "_ErrorLayout.cshtml";
    ViewData["Title"] = "Error";
}

<div class="container text-center py-5">

    <h1 class="display-4" style="color: var(--accent-pink);">
        Oops! Floral Catastrophe.
    </h1>

    <h2 class="lead mb-4">
        We are sorry, an error occurred while processing your request.
    </h2>

    <p class="text-muted mb-5">
        We'll have our digital florists fix this immediately.
    </p>

    <a asp-controller="Home" asp-action="Index"
       class="btn btn-lg"
       style="background-color: var(--accent-pink); color: white; border-radius: 999px; padding: 0.75rem 2rem;">
        Return to Home Page
    </a>
</div>