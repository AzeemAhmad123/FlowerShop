@{
    ViewData["Title"] = "Home";
}

<style>
    :root {
        --rose-pink: rgb(242, 160, 172);
        --deep-plum: #4a2f35;
        --soft-cream: #fff9f7;
        --sage-haze: #d5e4de;
    }

    .home-lux-wrapper {
        font-family: 'Playfair Display', 'Work Sans', sans-serif;
    }

    .hero-panel {
        background: linear-gradient(135deg, rgba(242, 160, 172, 0.25), rgba(213, 228, 222, 0.35));
        border-radius: 32px;
        padding: 4rem 3rem;
        box-shadow: 0 25px 60px rgba(74, 47, 53, 0.15);
    }

        .hero-panel h1 {
            font-size: clamp(2.8rem, 4vw, 4rem);
            font-weight: 600;
            letter-spacing: 0.08rem;
            color: var(--deep-plum);
        }

        .hero-panel p {
            font-family: 'Work Sans', sans-serif;
            font-size: 1.1rem;
            line-height: 1.8;
            color: #5c4a4f;
        }

    .btn-rose {
        background-color: var(--rose-pink);
        border: none;
        color: #fff;
        text-transform: uppercase;
        letter-spacing: 0.15rem;
        padding: 0.95rem 2.8rem;
        border-radius: 999px;
        font-weight: 600;
        transition: transform 0.25s ease, box-shadow 0.25s ease;
    }

        .btn-rose:hover,
        .btn-rose:focus {
            transform: scale(1.05);
            box-shadow: 0 20px 35px rgba(242, 160, 172, 0.35);
            color: #fff;
        }

    .section-heading {
        font-family: 'Playfair Display', serif;
        font-size: 2rem;
        color: var(--deep-plum);
    }

    .section-lead {
        color: #6b575e;
        max-width: 720px;
    }

    .lux-card-grid .lux-card {
        background: var(--soft-cream);
        border-radius: 24px;
        padding: 1.75rem;
        box-shadow: 0 20px 40px rgba(74, 47, 53, 0.08);
        border: 1px solid rgba(242, 160, 172, 0.2);
        height: 100%;
        position: relative;
        overflow: hidden;
    }

    .lux-card::after {
        content: '';
        position: absolute;
        inset: 0;
        border-radius: 24px;
        background: linear-gradient(145deg, rgba(242, 160, 172, 0.08), transparent 60%);
        pointer-events: none;
    }

    .lux-card h3 {
        font-family: 'Playfair Display', serif;
        color: var(--deep-plum);
        font-size: 1.35rem;
        margin-bottom: 0.75rem;
    }

    .lux-card p {
        font-family: 'Work Sans', sans-serif;
        color: #6f5a61;
        margin-bottom: 0;
    }
</style>

<div class="home-lux-wrapper container py-5">
    <!-- Hero Section -->
    <section class="hero-panel text-center mb-5">
        <h1 class="mb-3">Curated Luxury Floral Experiences Delivered To You</h1>
        <p class="mb-4">
            Our online flower atelier simplifies the process of discovering and purchasing gorgeous floral displays
            for every occasion, from intimate soirées to grand celebrations. Expect artisan craftsmanship, premium blooms,
            and service tailored to your sensibilities.
        </p>
        <a class="btn btn-rose" asp-controller="Shop" asp-action="Index">
            Browse Product Catalog
        </a>
    </section>

