@model List<FlowerShop.Models.Order>
@{
    ViewData["Title"] = "Manage Orders";
}

<style>
    .admin-orders-wrapper {
        padding: 2rem;
    }

    .admin-section {
        background: white;
        border-radius: 20px;
        padding: 2rem;
        box-shadow: 0 20px 60px rgba(0, 0, 0, 0.1);
        margin-bottom: 2rem;
    }

        .admin-section h2 {
            color: #3d2c32;
            margin-bottom: 1.5rem;
            border-bottom: 3px solid #f2a0ac;
            padding-bottom: 0.5rem;
        }

    .orders-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 1rem;
    }

        .orders-table th {
            background: #f8f9fa;
            padding: 1rem;
            text-align: left;
            font-weight: 600;
            color: #3d2c32;
            border-bottom: 2px solid #f2a0ac;
            text-transform: uppercase;
            font-size: 0.85rem;
            letter-spacing: 0.05rem;
        }

        .orders-table td {
            padding: 1rem;
            border-bottom: 1px solid #e9ecef;
            color: #3d2c32;
        }

        .orders-table tr:hover {
            background: #f8f9fa;
        }

    .status-badge {
        padding: 0.4rem 1rem;
        border-radius: 999px;
        font-weight: 600;
        font-size: 0.85rem;
        display: inline-block;
    }

    .status-pending {
        background: #ffb347;
        color: #fff;
    }

    .status-processing {
        background: #957dad;
        color: #fff;
    }

    .status-delivered {
        background: #74c69d;
        color: #fff;
    }

    .status-cancelled {
        background: #dc3545;
        color: #fff;
    }

    .status-select {
        padding: 0.4rem 0.8rem;
        border: 1px solid #e0e0e0;
        border-radius: 5px;
        font-size: 0.9rem;
    }

    .update-btn {
        padding: 0.5rem 1.5rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
        border: none;
        border-radius: 5px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s;
        font-size: 0.9rem;
    }

        .update-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }

    .alert {
        padding: 1rem;
        border-radius: 10px;
        margin-bottom: 1.5rem;
    }

    .alert-success {
        background-color: #d4edda;
        border: 1px solid #c3e6cb;
        color: #155724;
    }

    .no-orders {
        text-align: center;
        padding: 3rem;
        color: #8a6c75;
    }
</style>

<div class="admin-orders-wrapper">
    <div class="mb-4">
        <h1 class="display-6 fw-semibold">Manage Orders</h1>
        <p class="text-muted">View and update order statuses</p>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">
            @TempData["SuccessMessage"]
        </div>
    }

    <div class="admin-section">
        <h2>All Orders</h2>

        @if (Model != null && Model.Any())
        {
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Total Amount</th>
                        <th>Status</th>
                        <th>Update Status</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model)
                    {
                        var statusClass = order.Status.ToLower() switch
                        {
                            "pending" => "status-pending",
                            "processing" => "status-processing",
                            "delivered" => "status-delivered",
                            "cancelled" => "status-cancelled",
                            _ => "status-pending"
                        };

                        <tr>
                            <td>#@order.Id</td>
                            <td>@(order.Client?.Email ?? "N/A")</td>
                            <td>@order.OrderDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>$@order.TotalAmount.ToString("F2")</td>
                            <td>
                                <span class="status-badge @statusClass">@order.Status</span>
                            </td>
                            <td>
                                <form asp-action="UpdateOrderStatus" method="post" class="d-inline">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="id" value="@order.Id" />
                                    <select name="status" class="status-select">
                                        <option value="Pending" selected="@(order.Status == "Pending")">Pending</option>
                                        <option value="Processing" selected="@(order.Status == "Processing")">Processing</option>
                                        <option value="Out for Delivery" selected="@(order.Status == "Out for Delivery")">Out for Delivery</option>
                                        <option value="Delivered" selected="@(order.Status == "Delivered")">Delivered</option>
                                        <option value="Cancelled" selected="@(order.Status == "Cancelled")">Cancelled</option>
                                    </select>
                                    <button type="submit" class="update-btn">Update</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="no-orders">
                <p>No orders found.</p>
            </div>
        }
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-outline-primary">Back to Dashboard</a>
    </div>
</div>


